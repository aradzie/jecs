{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react-jsx",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "error",
    "strict": true,
    "target": "es2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "src",
    "outDir": "lib",
    "incremental": true,
    "tsBuildInfoFile": "lib/.tsbuildcache"
  },
  "include": ["src/**/*"],
  "ts-node": {
    "transpileOnly": true
  }
}
